@model IEnumerable<ARJE20250319.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Marcas</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Crear</a>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BrandId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BrandId" class="btn btn-success btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

